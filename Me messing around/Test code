from datetime import date
from dateutil.relativedelta import relativedelta

d0 = date(2009, 4, 6)
d1 = date(2025, 10, 21)

verschil = relativedelta(d1, d0)

print(f"You are {verschil.years} years {verschil.months} months {verschil.days} days old!")

from datetime import datetime

dob = date(2009,4,6)
dot = date(2025,10,21)

verschil1 = dot - dob

print(f"You are {verschil1.days} days old!")


from datetime import date
from dateutil.relativedelta import relativedelta

by = int(input("Enter birth year (e.g., 2009): "))
bm = int(input("Enter birth month (1-12): "))
bd = int(input("Enter birth day (1-31): "))

ty = int(input("Enter current year (e.g., 2025): "))
tm = int(input("Enter current month (1-12): "))
td = int(input("Enter current day (1-31): "))

birth = date(by, bm, bd)
today = date(ty, tm, td)

age = relativedelta(today, birth)

print(f"You are {age.years} years, {age.months} months and {age.days} days old.")
