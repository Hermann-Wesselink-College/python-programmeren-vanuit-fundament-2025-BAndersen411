ArtikleNo = int(input('Geef nummer van artikle.'))

if ArtikleNo == 1:
    prijs = 10
elif ArtikleNo == 2:
    prijs = 15
elif ArtikleNo == 3:
    prijs = 20
else:
    prijs = 0
    print("Onbekend artikelnummer")

print(prijs)

KortingsCode = input('Invoer kortings Code: ')

if KortingsCode == 'MoedersDag':
    print('Jij hebt een korting van 10%')
    nieuwePrijs = prijs * 0.90
    print(f"Jouw nieuwe prijs is: â‚¬{nieuwePrijs}.")
else:
    print('Verkeerde code, probeer opnieuw.')




